<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment.ListFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/seasonAnimeText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Select Season"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner_season"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background"
            android:entries="@array/seasons"
            android:gravity="center"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/seasonAnimeText"
            tools:layout_editor_absoluteX="0dp" />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background"
            android:entries="@array/year"
            android:gravity="center"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/seasonAnimeText"
            tools:layout_editor_absoluteX="0dp" />

    </RelativeLayout>

<!--    <androidx.appcompat.widget.SearchView-->
<!--        android:id="@+id/searchView"-->
<!--        android:background="@drawable/background"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="8dp"-->
<!--        android:layout_marginTop="8dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:queryHint="Search Here...."-->
<!--        tools:ignore="MissingConstraints"-->
<!--        app:iconifiedByDefault="false"-->
<!--        />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/item_anime" />




</androidx.constraintlayout.widget.ConstraintLayout>




































